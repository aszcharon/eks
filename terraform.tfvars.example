aws_region    = "ap-northeast-2"
project_name  = "eks"
environment   = "dev"
vpc_cidr      = "192.168.0.0/16"
eks_version   = "1.32"

# Node group configuration
node_instance_types = ["t3.small"]
node_desired_size   = 2
node_max_size       = 4
node_min_size       = 1

# Bastion configuration
create_bastion_key_pair = true  # Set to false if you want to use your own key
# bastion_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-public-key-here"